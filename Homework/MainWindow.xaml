<Window x:Class="Homework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Homework"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="None"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="one"
        MouseDown="one_MouseDown"
          Background="White">

        <materialDesign:PackIcon Kind="Close"
                                 Height="30"
                                 Width="30"
                                 HorizontalAlignment="Right"
                                 Margin="0 5 5 0"
                                 MouseDown="PackIcon_MouseDown"
                                 Cursor="Hand" ToolTip="Закрыть"/>
        <Image Source="C:\Users\bende\source\repos\Homework\Homework\img\Fon.png"
               Height="450"
               Width="800"
               Opacity="0.6"
               />
        <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="5 5 0 0"
                    
                >
            
            <Image Source="C:\Users\bende\source\repos\Homework\Homework\img\Logo.png"
               Height="50"
               
               />
            <TextBlock Text="Частная клиника" 
                       FontSize="18" 
                       Margin="0 20 0 0" 
                       />

            <TextBlock Text="HelpPlus" 
                       FontSize="18" 
                       Margin="10 20 0 0"
                       Foreground="#FF549398"
                       
                       />
        </StackPanel>
        <TextBlock 
                       FontSize="36" 
                       Margin="10,190,483,152"
                       Foreground="Black" FontWeight="Bold"
                   
                       ><Run Text="Мы заботимся "/><Run Text="о"/><LineBreak/><Run Text="самом ценном"/></TextBlock>
        <TextBlock 
                       FontSize="18" 
                       Margin="10,290,0,0"
                       Foreground="#FFB0B0B0"
                   Background="Transparent">
            
            <Run Text="Лучшие традиции медицины для всей "/><LineBreak/><Run Text="семь"/><Run Text="и"/></TextBlock>

        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0 20 0 0" Orientation="Horizontal" Width="430">
            <Button Name="About_us"
                    Content="О нас"
                    Background="Transparent"
                    Style="{StaticResource MaterialDesignFlatLightButton}" FontSize="18" VerticalContentAlignment="Center" Foreground="Black"
                    Width="80"
                    />
            <Button Name="Items"
                    Content="Оборудование"
                    Background="Transparent"
                    Style="{StaticResource MaterialDesignFlatLightButton}" FontSize="18" VerticalContentAlignment="Center" Foreground="Black"
                    Margin="0 0 0 0"
                    Width="158"
                    />
            <Button Name="Question"
                    Content="Задать вопрос"
                    Background="Transparent"
                    Style="{StaticResource MaterialDesignFlatLightButton}" FontSize="18" VerticalContentAlignment="Center" Foreground="Black"
                    Width="157"
                    />

        </StackPanel>
        <Border CornerRadius="0, 150, 150, 150" Margin="494,107,27,65">
            <Border.Background>
                <ImageBrush Stretch="Fill" ImageSource="C:\Users\bende\source\repos\Homework\Homework\img\Women.jpg"></ImageBrush>
            </Border.Background>

        </Border>
    </Grid>
</Window>
